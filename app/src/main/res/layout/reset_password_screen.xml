<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="494dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_heading"
            style="@style/HeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password" />

        <TextView
            android:id="@+id/tv_pass"
            style="@style/passwordTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/et_pass"
            style="@style/btnTextStyle"
            android:textColor="@color/black"
            android:background = "@drawable/password_bg"
            android:ems="10"
            android:inputType="textPassword"
           android:drawableEnd="@drawable/outline_disabled_visible_24"/>

        <TextView
            android:id="@+id/tv_confirm_pass"
            style="@style/passwordTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password" />

        <EditText
            android:id="@+id/et_confiram_pass"
            style="@style/btnTextStyle"
            android:textColor="@color/black"
            android:background = "@drawable/password_bg"
            android:ems="10"
            android:inputType="textPassword"
            android:drawableEnd="@drawable/outline_disabled_visible_24"/>

        <TextView
            android:id="@+id/tv_email"
            style="@style/passwordTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/et_email"
            style="@style/btnTextStyle"
            android:textColor="@color/black"
            android:background = "@drawable/password_bg"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btn_continue"
            style="@style/btnTextStyle"
            android:background="@drawable/btn_background"
            android:text="Continue" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>