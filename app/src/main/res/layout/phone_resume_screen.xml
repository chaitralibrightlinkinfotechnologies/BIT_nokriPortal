<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="38dp"
            android:layout_gravity="center_vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_back"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:src="?attr/actionModeCloseDrawable"
                android:tint="@color/pink"
                app:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/tv_heading"
            style="@style/HeadingTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone and Resume" />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_resume"
            style="@style/passwordTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Resume"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_pass"
            style="@style/btnTextStyle"
            android:background="@drawable/password_bg"
            android:drawableEnd="@drawable/outline_disabled_visible_24"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/passwordTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/et_email"
            style="@style/btnTextStyle"
            android:background="@drawable/password_bg"
            android:ems="10"
            android:layout_height="85dp"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_gravity="center_horizontal"
            style="@style/btnTextStyle"
            android:background="@drawable/btn_background"
            android:text="Submit" />
        <Button
            android:id="@+id/btn_previous"
            style="@style/btnTextStyle"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_prevous_bg"
            android:text="Previous"
            android:textColor="@color/pink"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>