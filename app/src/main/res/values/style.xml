<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadingTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">38dp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="SubheadingTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#80000000</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">38dp</item>
    </style>

    <style name="btnTextStyle">
        <item name="android:layout_width">328dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">38dp</item>
    </style>

    <style name="otpTextStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="ResendOTPTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#80000000</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">38dp</item>
    </style>

    <style name="passwordTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>


</resources>